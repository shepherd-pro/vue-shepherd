{
  "name": "vue-shepherd",
  "version": "0.2.1",
  "description": "A Vue wrapper for the site tour library Shepherd.",
  "author": {
    "name": "Robert Wagner",
    "email": "rwwagner90@gmail.com",
    "url": "https://github.com/rwwagner90"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "yarn serve",
    "lint": "vue-cli-service lint",
    "prepublish": "yarn lint && yarn build",
    "serve": "vue-cli-service serve",
    "start": "yarn serve",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "main": "dist/vue-shepherd.common.js",
  "module": "dist/vue-shepherd.esm.js",
  "files": [
    "dist/vue-shepherd.common.js",
    "dist/vue-shepherd.common.js.map",
    "dist/vue-shepherd.esm.js",
    "dist/vue-shepherd.esm.js.map",
    "package.json",
    "README.md",
    "src"
  ],
  "dependencies": {
    "shepherd.js": "^8.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@vue/cli-plugin-babel": "^4.5.9",
    "@vue/cli-plugin-e2e-cypress": "^4.5.9",
    "@vue/cli-plugin-eslint": "^4.5.9",
    "@vue/cli-service": "^4.5.9",
    "@vue/compiler-sfc": "^3.0.4",
    "babel-eslint": "^10.1.0",
    "cypress": "^5.6.0",
    "eslint": "^7.15.0",
    "eslint-plugin-vue": "^7.2.0",
    "release-it": "^14.2.2",
    "release-it-lerna-changelog": "^3.1.0",
    "rollup": "^2.34.2",
    "rollup-plugin-filesize": "^9.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-vue": "^6.0.0",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "root": true
  },
  "keywords": [
    "vue",
    "site tour",
    "tour",
    "shepherd"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn prepublish"
    },
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "repository": "https://github.com/shipshapecode/vue-shepherd",
  "sideeffects": false
}
